{
  "extends": [
    "@hiyocord/tsconfig/node/tsconfig.json",
  ],
  "compilerOptions": {
    "rootDir": "${configDir}/src",
    "baseUrl": "${configDir}/src",
    "declarationDir": "${configDir}/dist",
    "outDir": "${configDir}/dist",

    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],

    "types": [
      "vite/client"
    ],

    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,

    "exactOptionalPropertyTypes": false
  },
  "include": [
    "src/**/*"
  ]
}
