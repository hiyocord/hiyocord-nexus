{
  "extends": [
    "@hiyocord/tsconfig/node/tsconfig.json",
  ],
  "compilerOptions": {
    "rootDir": "${configDir}/src",
    "baseUrl": "${configDir}/src",

    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],

    "types": [
      "vite/client"
    ],

    "jsx": "react-jsx",
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*"
  ]
}
